                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1. element of the List -->
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#d9dadd" BorderThickness="1" Padding="0,0,0,1" Margin="1">
                    <Grid Background="#fbfbfc">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
