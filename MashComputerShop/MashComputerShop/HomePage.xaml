                    </Grid>
                </Border>

                <!-- 7. element of the List -->
                <Border Grid.Row="1" Grid.Column="3" BorderBrush="#d9dadd" BorderThickness="1" Padding="0,0,0,1" Margin="1">
                    <Grid Background="#fbfbfc">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
