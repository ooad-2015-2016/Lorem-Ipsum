                        <TextBlock FontFamily="Roboto Regular" Foreground="#5aa2ea" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1">450BAM</TextBlock>
                    </Grid>
                </Border>

                <!-- 3. element of the List -->
                <Border Grid.Row="0" Grid.Column="3" BorderBrush="#d9dadd" BorderThickness="1" Padding="0,0,0,1" Margin="1">
                    <Grid Background="#fbfbfc">
                        <Grid.RowDefinitions>
