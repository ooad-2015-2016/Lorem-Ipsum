<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MashComputerShop.MashShop.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UserControlTemplates="using:MashComputerShop.MashShop.Views.UserControlTemplates"
    x:Class="MashComputerShop.MashShop.Views.Pages.CreateConfiguration"
    mc:Ignorable="d">

    <Grid Background="#f2f3f6">
        <!-- Adaptive Layout Triggers -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="homePageVisualStateGroup">

                <!-- Page Layout for mobile screen -->
                <VisualState x:ConnectionId='2' x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <!-- Header & Footer -->
                        <Setter Target="topRow.Height" Value="38"/>
                        <Setter Target="separatorRow.Height" Value="3"/>
                        <Setter Target="bottomRow.Height" Value="38"/>
                        
                        <!-- Navigation bar labels -->
                        <Setter Target="PriceRangeButton.Content" Value="Rang cijene" />
                        <Setter Target="ComponentsButton.Content" Value="Komponente" />
                        <Setter Target="DeliveryButton.Content" Value="Plaćanje" />
                        <Setter Target="PaymentButton.Content" Value="Račun" />

                        <!-- Footer Columns -->
                        <Setter Target="productCount.Visibility" Value="Collapsed" />
                        <Setter Target="firstPriceTag.Text" Value="Cijena: " />
                    </VisualState.Setters>
                </VisualState>

                <!-- Page Layout for desktop screen sizes -->
                <VisualState x:ConnectionId='3' x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"/>
                    </VisualState.StateTriggers>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='4' x:Name="topRow" Height="45"/>
            <RowDefinition x:ConnectionId='5' x:Name="separatorRow" Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:ConnectionId='6' x:Name="bottomRow" Height="45"/>
        </Grid.RowDefinitions>
        
        <!-- Navigaton Bar -->
        <Border BorderBrush="#d9dadd" BorderThickness="1" Background="#fbfbfc">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Rectangle x:ConnectionId='13' Name="selectedTabUnderline" Height="4" Fill="#5aa2ea" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>

                <Button x:ConnectionId='14' x:Name="PriceRangeButton" 
                                                       
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Content="Odabir ranga cijene" 
                        Style="{StaticResource NavigationBtnSelected}"/>
                
                <Button x:ConnectionId='15' x:Name="ComponentsButton" 
                                                       
                        Grid.Column="1" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Content="Odabir komponenti" 
                        Style="{StaticResource NavigationBtnSelected}"/>
                
                <Button x:ConnectionId='16' x:Name="DeliveryButton" 
                                                    
                        Grid.Column="2" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Content="Dostava i plaćanje" 
                        Style="{StaticResource NavigationBtnSelected}"/>
                
                <Button x:ConnectionId='17' x:Name="PaymentButton" 
                                                    
                        Grid.Column="3" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Content="Zaključivanje kupovine" 
                        Style="{StaticResource NavigationBtnSelected}"/>
                
            </Grid>
        </Border>
        
        <!-- Internal frame for hosting content -->
        <Frame x:ConnectionId='7' Name="contentPage" Grid.Row="2"/>

        <!-- Footer -->
        <Border x:ConnectionId='8' x:Name="FooterDrawer" 
                Grid.Row="3" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                BorderBrush="#d9dadd" 
                BorderThickness="1" 
                Background="#fbfbfc" 
                Padding="0,1,0,0">

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TextBlock za prikaz stanja u korpi -->
                <RelativePanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                    <TextBlock x:ConnectionId='11' Name="productCount"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        RelativePanel.LeftOf="showSoppingCart"
                        Margin="20, 0, 0, 0"
					    FontFamily="Roboto"
					    FontWeight="Light"
                        Foreground="#59626d">
                        
                        <Run>Ukupno </Run>
                        <Run Text="{Binding Path=ShoppingCartVM.ShoppingCart.Items.Count, Mode=TwoWay}"/>
                        <Run> proizvoda u korpi.</Run>

                    </TextBlock>

                    <HyperlinkButton x:ConnectionId='12' 
                        Name="showSoppingCart"                    
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
					    FontFamily="Roboto"
					    FontWeight="Normal" 
					    Content="Pregledaj korpu"
                                                      />

                </RelativePanel>

                <!-- TextBlock za prikaz ukupne cijene -->
                <TextBlock x:ConnectionId='9' 
                    x:Name="totalPrice" 
					Grid.Column="2" 
					HorizontalAlignment="Center"  
					VerticalAlignment="Center" 
					FontFamily="Roboto" 
					FontWeight="Light"
                    Foreground="#59626d">
                    
                    <Run x:ConnectionId='10' x:Name="firstPriceTag" >Ukupna cijena: </Run>
                    <Run Text="{Binding Path=ShoppingCartVM.ShoppingCart.TotalCartPrice, Mode=TwoWay}"/>
                    <Run>$</Run>

                </TextBlock>
            
            </Grid>
        </Border>

    </Grid>
</Page>

